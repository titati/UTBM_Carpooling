<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/home_selector"
                android:gravity="center"
                tools:context=".HomeActivity" >

    <ImageView
        android:id="@+id/home_imageview_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="21dp"
        android:scaleType="center"
        android:src="@drawable/utbm"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <Button
            android:id="@+id/home_button_create_trip"
            android:layout_width="150dip"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:drawableTop="@drawable/new_trip"
            android:paddingTop="30dp"
            android:text="@string/home_action_create_trip"
            android:textColor="#333333"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearance"/>

        <Button
            android:id="@+id/home_button_find_trip"
            android:layout_width="150dip"
            android:layout_height="150dp"
            android:drawableTop="@drawable/find_trip"
            android:paddingTop="30dp"
            android:text="@string/home_action_find_trip"
            android:textColor="#333333"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_toRightOf="@+id/home_button_create_trip"
            android:layout_alignTop="@+id/home_button_create_trip"/>

        <Button
            android:id="@+id/home_button_trips"
            android:layout_width="150dip"
            android:layout_height="150dp"
            android:layout_below="@+id/home_button_create_trip"
            android:layout_toLeftOf="@+id/home_button_find_trip"
            android:drawableTop="@drawable/my_trips"
            android:paddingTop="30dp"
            android:text="@string/home_action_trips"
            android:textColor="#333333"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearance"/>

        <Button
            android:id="@+id/home_button_profile"
            android:layout_width="150dip"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/home_button_find_trip"
            android:layout_below="@+id/home_button_find_trip"
            android:drawableTop="@drawable/my_profile"
            android:paddingTop="30dp"
            android:text="@string/home_action_profile"
            android:textColor="#333333"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearance"/>
    </RelativeLayout>

</FrameLayout>