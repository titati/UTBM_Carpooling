<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/fr.utbm.carpooling"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"

    >

    <fr.utbm.carpooling.view.widgets.TripPathView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/alert_item_trippathview"
        custom:surroundBounds="false"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:minWidth="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:minHeight="100dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tableLayout"
        android:layout_toRightOf="@+id/alert_item_trippathview"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/alert_item_textview_departure_point"/>

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="1"
                android:id="@+id/space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/alert_item_textview_departure_date"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/alert_item_textview_arrival_point"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/alert_item_textview_arrival_time"/>



        </TableRow>

    </TableLayout>
</RelativeLayout>