<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:shrinkColumns="0"
             android:stretchColumns="1"
             tools:context=".EditInfoActivity"
             android:padding="20dp"
             android:focusableInTouchMode="true"
             android:gravity="center_horizontal|top">

    <TableRow
        android:layout_gravity="center_vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/profile_info_stextview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/profile_info_caption_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:enabled="false"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/profile_info_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bombeur"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_column="1"
            android:inputType="textPersonName"
            android:editable="true"
            android:layout_gravity="center_vertical"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center_vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/profile_info_stextview_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/profile_info_caption_firstname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:enabled="false"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/profile_info_textview_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jean"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_column="1"
            android:inputType="textPersonName"
            android:editable="true"
            android:layout_gravity="center_vertical"/>

    </TableRow>

    <TableRow
        android:layout_gravity="center_vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/profile_info_stextview_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/profile_info_caption_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:enabled="false"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/profile_info_textview_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="normal"
            android:layout_weight="1"
            android:layout_column="1"
            android:inputType="phone"
            android:editable="true"
            android:layout_gravity="center_vertical"/>

    </TableRow>

    <TableRow android:layout_gravity="center_vertical"
              android:paddingBottom="5dp">

        <TextView
            android:id="@+id/profile_info_stextview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/profile_info_caption_email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:enabled="false"
            android:editable="false"
            android:layout_column="0"/>

        <EditText
            android:id="@+id/profile_info_textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jean.bombeur@utbm.fr"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_column="1"
            android:inputType="textEmailAddress"
            android:editable="true"
            android:layout_gravity="center_vertical"/>

    </TableRow>

</TableLayout>