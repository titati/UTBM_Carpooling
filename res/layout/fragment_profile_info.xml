<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileInfoFragment"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_info_caption_name"
        android:enabled="false"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/profile_info_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bombeur"
        style="@android:style/TextAppearance.Medium"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_info_caption_firstname"
        android:enabled="false"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/profile_info_textview_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jean"
        style="@android:style/TextAppearance.Medium"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_info_caption_phone"
        android:enabled="false"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/profile_info_textview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0123456789"
        style="@android:style/TextAppearance.Medium"
        android:paddingBottom="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_info_caption_email"
        android:enabled="false"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/profile_info_textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jean.bombeur@utbm.fr"
        style="@android:style/TextAppearance.Medium"/>
</LinearLayout>